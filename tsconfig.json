{
	"compilerOptions": {
		"sourceMap": true,
		"allowJs": true,
		"module": "commonjs",
		"target": "es5",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"lib": ["es7", "dom", "es2015.promise"],
		"jsx": "react",
		"moduleResolution": "Node",
		"baseUrl": "./",
		"paths": {
			"@app/*": ["src/*"]
		}
	},
	"include": ["src"]
}
